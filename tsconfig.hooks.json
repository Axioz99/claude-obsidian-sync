{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src/**/*", "hooks/**/*"],
  "exclude": ["node_modules", "dist", "tests", "examples"]
}
